
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

     <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">


     <script>
      function showAnswer(answerId){
        const answerElement = document.getElementById(answerId);
        answerElement.style.display = "block";
      }

     </script>

  </head>
  <body>



    <div class="container" style="text-align: center; margin-top: 300px;">
     <h1>Trivia Game</h1>

     <ol>
        <% questions.forEach((question, index) => { %>
            <li>
              <p> <%= question.question %></p>
              <ul>
                <% question.incorrect_answers.concat(question.correct_answer).forEach(answer => { %>
                    <li><%= answer %></li>

                <% }) %>

              </ul>
            </li>
            <p id="answer-<%= index %>" style="display: none;">
            Correct Answer: <%= question.correct_answer %></p>
            <button onclick="showAnswer('answer-<%= index %>')">show the Answer</button>

       <% }) %>
     </ol>



    </div>
  </body>

